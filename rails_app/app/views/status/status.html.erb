<style>
  table {width: 100%;}
  center { font-weight: bold;}
  td { border-bottom: 1px #000 solid; border-right: 1px #000 solid;}
  thead { display: inline-block; border-bottom: 1px #000 solid;}
  .box {
    float: left;
    overflow-x: hidden;
    border: 1px #000 solid;
    margin: 20px;
    width: 300px;
    height: 220px;
    overflow-y: scroll;
  }
  .inner-header {
    width: 100%;
    height: 20px;
    background: #000;
    color: #fff;
    border-bottom: 1px #000 solid;
    text-align: center;
    font-weight: bold;
    padding: 5px 0;
  }
</style>

<div class="box near-earth-objects">
  <div class="inner-header">Today's Near Earth Objects</div>
  <center style="border-bottom: 1px #000 solid;">Size | Orbital Pattern</center>
  <table>
    <tbody>
    <% @near_earth_objects.each do |neo| %>
      <tr>
        <td><%= neo['estimated_diameter']['miles']['estimated_diameter_max'].round(4) %> miles</td>
        <td><a href="<%= neo['nasa_jpl_url'] %>;old=0;orb=1;cov=0;log=0;cad=0#orb" target="_blank"><%= neo['nasa_jpl_url'] %></a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="box near-earth-objects">
  <div class="inner-header">SpaceX Launches</div>
  <center style="border-bottom: 1px #000 solid;">Flight # | Name | Launch Date</center>
  <table>
    <tbody>
    <% @spacex_launches.each do |launch| %>
    <tr>
      <td><%= launch['flight_number'] %></td>
      <td><%= launch['mission_name'] %></td>
      <td><%= launch['launch_date_utc'].to_date %></td>
      <td><a href="<%= launch['links']['wikipedia'] %>">WIKI</td></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="box near-earth-objects">
  <div class="inner-header">SpaceX Payloads</div>
  <center style="border-bottom: 1px #000 solid;">Weight | ID | Customer</center>
  <table>
    <tbody>
    <% @spacex_payloads.each do |launch| %>
      <tr>
        <td><%= launch['payload_mass_kg'] %></td>
        <td><%= launch['payload_id'] %></td>
        <td><%= launch['customers'].first %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="box near-earth-objects">
  <div class="inner-header">Mars Weather</div>
  <center style="border-bottom: 1px #000 solid;">Sol | Temperature | Sunset</center>
  <table>
    <% if @mars_weather %>
      <% @mars_weather.each do |sol_weather| %>
      <tbody>
        <tr>
          <td><%= sol_weather['sol'] %></td>
          <td><%= sol_weather['max_temp'] %></td>
          <td><%= sol_weather['sunset'] %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>

<div class="box near-earth-objects">
  <div class="inner-header">NASA Projects</div>
  <center style="border-bottom: 1px #000 solid;">Location | Title | Status</center>
  <table>
    <tbody>
    <% @nasa_projects.each do |project| %>
      <tr>
        <td><%= project['project']['title'] %></td>
        <td><%= project['project']['status'] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

